@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager;
@if (TempData["DeleteSuccessMsg"] != null)
{
    <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["DeleteSuccessMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@model List<CourseWithInstructor>
<h1 style="color:indianred">Available Courses</h1>
<div class="container">
    @if (userManager.GetUserAsync(User).Result!.Role == "Teacher")
    {
        <div class=" col-12 text-end">
            <a asp-action="Create">
                <i class="bi bi-cloud-plus"></i>Create an New Course
            </a>
        </div>
    }
    <div class="row pt-2">
        @foreach (var course in Model)
        {
            <div class="card border-primary mb-3" style="max-width: 30rem; ">
                <div class="card-header">
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@course.Description</p>
                        <p class="card-text">Instructor: @course.UserName</p>
                        <p class="card-text">Price: @course.Price.ToString("C")</p>
                        <p class="card-text">Created Date: @course.CreatedDate.ToString()</p>
                         <div class="row mt-3">
                             <div class="col-4">
                                <a class="btn btn-info" asp-action="CourseDetails" asp-route-id="@course.CourseId"><i class="bi bi-door-open"></i>Show Details</a>
                              </div>
                            @if (userManager.GetUserAsync(User).Result!.Role == "Teacher" || userManager.GetUserAsync(User).Result!.Role == "Admin")
                            {
                                <div class="col-4">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@course.CourseId"><i class="bi bi-pencil-square"></i>Edit Course</a>
                                </div>
                                <div class="col-4">
                                    <a class="btn btn-danger" asp-action="RemoveCourse" asp-route-id="@course.CourseId"><i class="bi bi-archive-fill"></i>Delete</a>
                                </div>
                            }
                         </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .row{
        margin:5;
        padding:5
    }
    .container{
        margin:5;
        padding:5
    }
    .card {
        border: 2px solid #e3e6f0;
        border-radius: 0.375rem;
        padding: 1rem;
        background-color: #ffffff;
        margin: 5rem 0;
        padding:5
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 500;
        color:cadetblue;
    }

    .card-text {
        margin-bottom: 0.75rem;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var successAlert = document.getElementById('success-alert');
            if (successAlert) {
                // Set a timeout to start fading out the alert after 5 seconds
                setTimeout(function () {
                    successAlert.classList.add('fade-out');
                    setTimeout(function () {
                        successAlert.remove();
                    }, 1000); // Wait for fade-out animation to complete
                }, 5000); // 5000 milliseconds = 5 seconds
            }
        });
    </script>
}
<style>
    .fade-out {
        opacity: 0;
        transition: opacity 1s ease-out;
    }
</style>
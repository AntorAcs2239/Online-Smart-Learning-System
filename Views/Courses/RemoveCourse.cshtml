@model Course
@if (Model == null)
{
    <p>Model is null</p>
}
else
{
    <form asp-action="Remove" method="post" onsubmit="return confirm('Are you sure you want to delete this course?');">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h1 class="text-danger">Delete the Course?</h1>
            </div>
            <p>Are you sure you want to delete the course "<strong>@Model.Title</strong>"?</p>
            <input type="hidden" asp-for="CourseId" />
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Courses" asp-action="CoursesList" class="btn btn-secondary form-control">Cancel</a>
                </div>
            </div>
        </div>
        @Html.AntiForgeryToken()
    </form>
}
